import java.io.*;
import java.math.*;
import java.security.*;
import java.text.*;
import java.util.*;
import java.util.concurrent.*;
import java.util.regex.*;

public class Solution 
{
    public static void main(String args[])
    {
        Scanner sc = new Scanner(System.in);
        int n=sc.nextInt();
        
        int a=0;
        String p="#";

        while(a!=n)
        {
            for(int i=a;i>=0;i--)
            {
                System.out.print(p);   
            }
            System.out.println();
            a++;
        }
    }
}
