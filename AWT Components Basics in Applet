import java.applet.*;
import java.awt.*;

public class applet_class extends Applet
{
	TextField t1,t2;
	Label l1,l2;
	Button b1;
	TextArea ta1;
	Checkbox c1;
	
	public void init() 
	{
		setLayout(new FlowLayout(FlowLayout.LEADING));
		t1 = new TextField(30);		//30 is just a width
		t2 = new TextField(10);
		
		l1 = new Label("Enter Your Name");
		l2 = new Label("Enter Your Phone Number");
		
		b1= new Button("Click");
		
		ta1 = new TextArea("",20,22);
		
		c1 = new Checkbox("Android");
		//it is imp to show or to add your Components to your Applet
		add(l1);
		add(t1);
		add(l2);
		add(t2);
		add(b1);
		add(ta1);
		add(c1);
	}
}
